<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoficharedondo"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_margin="15pt"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:padding="5pt">

        <ImageView
            android:id="@+id/txGato"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginHorizontal="20pt"
            android:layout_marginBottom="80dp"
            android:contentDescription="@string/gato" />

        <TextView
            android:id="@+id/txNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:textColor="#433E3E"
            android:textSize="40sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/contenedor_fragmento"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></FrameLayout>

            <FrameLayout
                android:id="@+id/contenedor_segundo_fragmento"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></FrameLayout>
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>