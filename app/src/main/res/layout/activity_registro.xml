<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoapp"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="522dp"

        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        android:padding="8pt">

        <ImageView
            android:id="@+id/reLogo"
            android:layout_width="47pt"
            android:layout_height="40pt"

            android:layout_gravity="center"
            android:background="@drawable/loguito"
            android:contentDescription="@string/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/reNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginVertical="10dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"

                android:background="@drawable/roundstyle"
                android:backgroundTint="#BFC6CC"
                android:autofillHints="name"
                android:hint="@string/nombre"
                android:inputType="text"
                android:padding="15dp" />

            <EditText
                android:id="@+id/reApellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginVertical="10dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"

                android:background="@drawable/roundstyle"
                android:backgroundTint="#BFC6CC"
                android:autofillHints="name"
                android:hint="@string/apellidos"
                android:inputType="text"
                android:padding="15dp" />

        </LinearLayout>

        <EditText
            android:id="@+id/reEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginVertical="10dp"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#BFC6CC"
            android:autofillHints="emailAddress"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:padding="15dp" />

        <EditText
            android:id="@+id/reContra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#BFC6CC"
            android:autofillHints="password"
            android:hint="@string/contraseÃ±a"
            android:inputType="textPassword"
            android:padding="15dp" />

        <Button
            android:id="@+id/reRegistrarse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#664434"
            android:text="@string/registrarse" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/reAceptar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="20dp"
                android:text="@string/aceptoCondiciones"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/reLeerCondiciones"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="5pt"
                android:background="@color/white"
                android:text="@string/leerCondiciones"
                android:textAlignment="center"
                android:textColor="@color/azul"

                android:textSize="14sp"
                tools:ignore="TextSizeCheck" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>