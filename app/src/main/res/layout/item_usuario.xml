                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/tvUsuarioNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:paddingTop="15dp"
                android:textSize="20sp" />
        </LinearLayout>
